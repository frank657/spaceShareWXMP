/* form style */
.user-input {
  width: 100%;
  margin-bottom: 35rpx;
}
.input-height {
  height: 10em;
}
.input-label {
  font-size: 35rpx;
}
textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  width: 100%;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: #fff;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #9F9F9C;
}

.banner-short {
  margin-bottom: 30px;
  font-weight: 800;
  background-size: cover !important;
  background-position: center;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);

}

.title-white {
  font-family: lato;
  color: white;
  font-size: 20px;
  text-align: center;
}

.button-primary {
background: #3165EC;
border: 1px solid rgba(0, 0, 0, 0.2);
box-sizing: border-box;
border-radius: 10px;
color: #fff;
width: 90%;
font-family: Lato;
font-style: normal;
font-weight: 900;
font-size: 14px;
text-align: center;
}

.picker{
    padding: 13px;
    background-color: #FFFFFF;
}