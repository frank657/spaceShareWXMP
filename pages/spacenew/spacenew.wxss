/* form style */
.user-input {
  width: 100%;
  margin-bottom: 35rpx;
}
.input-height {
  height: 10em;
}
.input-label {
  font-size: 35rpx;
}
textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  width: 100%;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: #fff;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #9F9F9C;
}

.banner-short {
  margin-bottom: 30px;
  font-weight: 800;
  background-size: cover !important;
  background-position: center;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);

}

.title-white {
  font-family: lato;
  color: white;
  font-size: 20px;
  text-align: center;
}

.button-primary {
background: #3165EC;
border: 1px solid rgba(0, 0, 0, 0.2);
box-sizing: border-box;
border-radius: 10px;
color: #fff;
width: 90%;
font-family: Lato;
font-style: normal;
font-weight: 900;
font-size: 14px;
text-align: center;
}

.select_box{
  width:100%;
  height:100%;
  border-radius: 14rpx;
  position: relative;
}
.select_box .select{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  padding-left: 0;
}
.select_box .select .select_text{
  font-size: 35rpx;
  color: #777777;
  line-height: 63rpx;
  flex: 1;
}
.select_box .select .select_img{
  width: 30rpx;
  height: 30rpx;
  display: block;
  transition:transform 0.3s;
}
.select_box .select .select_img_rotate{
  transform:rotate(180deg); 
}
.select_box .option_box{
  position: absolute;
  top: calc(100% - 1px);
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  border-left:1px solid #efefef;
  border-right:1px solid #efefef;
  background-color: white;
  z-index: 1;
}
.select_box .option_box .option{
  display: block;
  line-height: 40rpx; 
  font-size: 30rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}