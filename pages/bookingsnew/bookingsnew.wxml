<view class="banner-short" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1498409785966-ab341407de6e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1960&q=80);">
  <view class="container">
    <text class="title-white">Book this space</text>
    </view>
    </view>
 
  <view class="container-book-space">

  
    <form bindsubmit="bindSubmit">

    <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{name}}" style="input-size"placeholder="Today 4/3/2019" class="input-height" name="name" maxlength="-1" auto-height />
      </view>
    </view>

    <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{address}}" style="input-size"placeholder="1 Person" class="input-height" name="address" maxlength="-1" auto-height />
      </view>
    </view>

    <button class="button-primary" form-type="submit" loading="{{loading}}">Book now</button>
    </form>

  
  </view>
