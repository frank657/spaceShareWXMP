/* Cards */
.card {
  height: 150px;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  width: 90%;
  margin-bottom: 15px;
  margin-left: 5%;
}
.card-user {
  position: absolute;
  right: 10px;
  top: 10px;
  width: 40px;
  border-radius: 50%;
}
.card-space-name {
  position: absolute;
  top: 115px;
  left: 10px;
  font-family: Lato;
  font-style: normal;
  font-weight: normal;
  font-size: 18px;
  line-height: 24px;
}
.card-description {
  position: absolute;
  bottom: 10px;
  left: 10px;
}
.card-description .name {
  font-size: 24px;
}
.card-description .tag {
  font-size: 14px;
  opacity: 0.7;
  font-weight: lighter;
}

.price {
